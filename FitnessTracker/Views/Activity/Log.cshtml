@model FitnessTracker.ViewModels.ActivityLogViewModel

<h2>Log Activity</h2>

<form asp-action="Log" method="post">
    <div class="form-group row">
        <label class="col-sm-2 col-form-label" asp-for="ActivityType">Activity Type:</label>
        <div class="col-sm-10">
            <input asp-for="ActivityType" class="form-control" />
            <span asp-validation-for="ActivityType" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label class="col-sm-2 col-form-label" asp-for="DurationInMinutes">Duration (minutes):</label>
        <div class="col-sm-10">
            <input asp-for="DurationInMinutes" class="form-control" />
            <span asp-validation-for="DurationInMinutes" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label class="col-sm-2 col-form-label" asp-for="Distance">Distance:</label>
        <div class="col-sm-10">
            <input asp-for="Distance" class="form-control" />
            <span asp-validation-for="Distance" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label class="col-sm-2 col-form-label" asp-for="Intensity">Intensity:</label>
        <div class="col-sm-10">
            <input asp-for="Intensity" class="form-control" />
            <span asp-validation-for="Intensity" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label class="col-sm-2 col-form-label" asp-for="CaloriesBurned">Calories Burned:</label>
        <div class="col-sm-10">
            <input asp-for="CaloriesBurned" class="form-control" />
            <span asp-validation-for="CaloriesBurned" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <div class="offset-sm-2 col-sm-10">
            <button type="submit" class="btn btn-primary">Log Activity</button>
        </div>
    </div>
</form>

<div class="text-center mt-4">
    <a href="~/Activity/ViewActivities" class="btn btn-primary">View Activity Logs</a>
</div>